{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["es6"],
      "sourceMap": false,
      "strict": true,
      "allowJs": false,
      "moduleResolution": "node",
      "declaration": false,
      "downlevelIteration": true
    },
    "include": [
      "generators"
    ],
    "exclude": ["**/__tests__/**", "node_modules", "**/templates/*", "**/*.d.ts"]
  }